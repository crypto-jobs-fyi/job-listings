# Upstash Redis Configuration
KV_REST_API_URL=https://your-redis-url.upstash.io
KV_REST_API_TOKEN=your-redis-token

# Email Service (Resend)
RESEND_API_KEY=re_your_api_key

# JWT Authentication Secret (required for user authentication)
# Generate with: openssl rand -base64 64
# IMPORTANT: Replace this with a secure random secret before deployment
JWT_SECRET=REPLACE_WITH_SECURE_64_BYTE_SECRET_FROM_OPENSSL_COMMAND_ABOVE

# Admin Authentication Token
# Generate with: openssl rand -base64 32
ADMIN_AUTH_TOKEN=your-secure-admin-token

# Public Admin Token (optional, for development/client-side)
PUBLIC_ADMIN_TOKEN=your-secure-admin-token
